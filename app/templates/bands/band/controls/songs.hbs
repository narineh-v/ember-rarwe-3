
<ul class="rr-list">
    {{#each sortedSongs as |song|}}
    <li class="rr-list-item">
        {{capitalize song.title}}
        {{star-rating class="fr" rating=song.rating onClick=(action 'updateRating' song)}}
    </li>
    {{else}}
    <li class="rr-empty-message">
        No {{capitalize model.name}} songs yet.
    </li>
    {{/each}}
</ul>
<div class="rr-new-label">
    {{#if isAddingSong}}
    <form class="rr-inline-form" onsubmit={{action "saveSong"}}>
        {{input type="text" class="rr-input" value=newSongName placeholder=newSongPlaceholder}}
        <button type="onsubmit" class="rr-action-button" disabled={{isAddButtonDisabled}}>Add</button>
        <span class="rr-cancel-icon" onclick={{action "cancelAddSong"}}>{{fa-icon "times"}}</span>
    </form>
    {{else}}
    <label onclick={{action "addSong"}}>
        {{fa-icon "plus"}}
        <span class="ml1">Add new song</span>
    </label>
    {{/if}}
</div>